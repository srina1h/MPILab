;16 bit sub 8051
MOV R0,#00h
MOV R1,#00h
MOV R2,#00h

MOV A,#11H	;OP1 lower
SUBB A,#0FFH;OP2 lower 
MOV R2,A

MOV A,#11H	;OP1 higher
SUBB A,#0FFH;OP2 higher

JNC LABEL
MOV R1,A
INC R0 ;sign

MOV A,R2
CPL A
ADD A, #01h
MOV R2,A

MOV A,R1
CPL A
MOV R1,A

JC L1
SJMP HERE

L1 : INC R1
SJMP HERE

LABEL: MOV R1,A
HERE: SJMP HERE

